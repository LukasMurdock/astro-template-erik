---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---
<article class="p-6 bg-opacity-60 hover:bg-yellow-50">
  <header>
    <a href={post.url} class="text-black no-underline hover:underline">
      <h1 class="font-serif italic font-light text-indigo-600 wonk-heading">
        {post.title}
      </h1>
    </a>
  </header>
  <div class="text-indigo-600">
    <p>{post.description}</p>
  </div>
    <h3 class="text-sm text-indigo-600">{post.publishDate}</h3>
</article>